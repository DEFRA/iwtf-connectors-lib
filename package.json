{
  "name": "@defra-fish/connectors-lib",
  "version": "v1.18.0-rc.102",
  "description": "Connectors library for GAFL service",
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "rod",
    "licensing",
    "sales",
    "api"
  ],
  "author": "DEFRA",
  "license": "SEE LICENSE IN LICENSE",
  "main": "src/index.js",
  "directories": {
    "lib": "src",
    "test": "src/__tests__"
  },
  "files": [
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/DEFRA/iwtf-connectors-lib.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "test:only-changed": "jest --changedSince develop",
    "test:watch": "jest --watch",
    "format": "prettier-standard"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.14.4",
    "@types/hapi__hapi": "^20.0.8",
    "@types/jest": "^26.0.23",
    "auto-changelog": "^2.3.0",
    "babel-jest": "^26.6.3",
    "clone-deep": "^4.0.1",
    "dynamics-web-api": "1.7.3",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier-standard": "^16.4.1",
    "simple-oauth2": "^4.2.0",
    "standard": "^16.0.3"
  },
  "dependencies": {
    "@airbrake/node": "^1.4.2",
    "aws-sdk": "^2.922.0",
    "debug": "^4.3.1",
    "ioredis": "^4.27.5",
    "node-fetch": "^2.6.1",
    "redlock": "^4.2.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "@babel/eslint-parser",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "printWidth": 140,
    "alignTernaryLines": false
  },
  "standard": {
    "env": {
      "node": true,
      "jest": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:only-changed && lint-staged",
      "pre-push": "prettier-standard --check --lint --since develop"
    }
  },
  "lint-staged": {
    "*": [
      "prettier-standard --fix --lint"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "projects": [
      "<rootDir>"
    ],
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner"
  }
}
